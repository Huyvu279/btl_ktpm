@model KTPMUD.Models.ThanhToanVienPhi

@{
    ViewData["Title"] = "Chi tiết Hóa đơn #" + Model.Id;
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Thông tin Thanh toán</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Bệnh nhân</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.NgayThanhToan.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Số tiền cần thanh toán</dt>
            <dd class="col-sm-9 h5 text-danger">@Model.SoTien.ToString("N0") VNĐ</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.TrangThai == "Đã thanh toán" ? "bg-success" : "bg-warning")">
                    @Model.TrangThai
                </span>
            </dd>

            <dt class="col-sm-3">Nội dung</dt>
            <dd class="col-sm-9">@Model.GhiChu</dd>
        </dl>

        <hr />

        @if (Model.TrangThai != "Đã thanh toán")
        {
                <div class="alert alert-info">
                    <h5>Vui lòng thanh toán theo thông tin sau:</h5>
                    <ul class="list-unstyled">
                        <li><strong>Ngân hàng:</strong> VHLBank</li>
                        <li><strong>Số tài khoản:</strong> 0123456789</li>
                        <li><strong>Chủ tài khoản:</strong> Nhóm 03</li>
                        <li>
                            <strong>Nội dung chuyển khoản (bắt buộc):</strong>
                            <kbd>Thanh toan vien phi ma @Model.Id cho @Model.User.FullName</kbd>
                        </li>
                    </ul>
                </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách Viện phí</a>
</div>
