@model KTPMUD.Models.BenhNhan

@{
    ViewData["Title"] = "Chi tiết Hồ sơ Bệnh án";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Bệnh nhân: @Model.HoTen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Họ Tên</dt>
        <dd class="col-sm-9">@Model.HoTen</dd>

        <dt class="col-sm-3">Ngày Sinh</dt>
        <dd class="col-sm-9">
            @* SỬA LỖI Ở ĐÂY: Hiển thị trực tiếp, không cần kiểm tra HasValue *@
            @Model.NgaySinh.ToString("dd/MM/yyyy")
        </dd>

        <dt class="col-sm-3">Giới Tính</dt>
        <dd class="col-sm-9">@Model.GioiTinh</dd>

        <dt class="col-sm-3">Địa Chỉ</dt>
        <dd class="col-sm-9">@Model.DiaChi</dd>

        <dt class="col-sm-3">Số Điện Thoại</dt>
        <dd class="col-sm-9">@Model.SoDienThoai</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Tiền sử bệnh án</dt>
        <dd class="col-sm-9">
            <pre style="white-space: pre-wrap; font-family: inherit; margin: 0;">@Model.TienSuBenhAn</pre>
        </dd>

        <dt class="col-sm-3">Ghi Chú</dt>
        <dd class="col-sm-9">
            <pre style="white-space: pre-wrap; font-family: inherit; margin: 0;">@Model.GhiChu</pre>
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="ChinhSua" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a> |
    <a asp-action="DanhSach" class="btn btn-secondary">Quay lại Danh sách</a>
</div>